/* pages/index/index.wxss */

.container {
  border-top: 1rpx solid #e0e0e0;
}

.header {
  display: flex;
  margin: 20rpx;
  padding: 20rpx;
  align-items: center;
  border: 1rpx solid #e0e0e0;
  border-radius: 6rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
}

.header image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.todos {
  margin: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 6rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
}

.todos .todo-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.todos .todo-item:last-child {
  border-bottom: none;
}

.todos .todo-item text {
  flex: 1;
  font-size: 30rpx;
  margin-left: 20rpx;
  color: #444;
}

.todos .todo-item.completed text {
  color: #888;
  text-decoration: line-through;
}

.footer {
  display: flex;
  margin: 20rpx;
  justify-content: space-between;
}

.footer text {
  font-size: 30rpx;
  color: #333;
}

.null-text {
  display: block;
  color: #888;
  text-align: center;
  font-size: 24rpx;
}
